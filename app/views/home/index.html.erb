<div class="row">
  <aside class="col-md-4">
    <% @user ||= current_user %>
    <%= render 'shared/side_panel' %>
    <%= render 'shared/side_user_search' %>
  </aside>
  <div class="col-md-8 homu_up">
    <% flash.each do |key, value| %>
      <div class="alert <%= bootstrap_class_for(key) %> tweet_form"><%= value %></div>
    <% end %>
    <%= render 'tweet_form' %>
    <%= render 'tweet_show' %>
  </div>
</div>
<%= link_to "Sign out", destroy_user_session_path, method: "delete" %>
